<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".fragment.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f3f3f3"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_user"
            android:background="#e7e7eb"
            android:layout_margin="0dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@mipmap/men"
                android:id="@+id/user_image"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:id="@+id/user_name"
                android:textSize="15sp"
                android:fontFamily="casual"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="四海八荒，始于足下。"
                android:id="@+id/user_signature"
                android:textSize="15sp"
                android:fontFamily="casual"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="0dp">
            <Button
                android:id="@+id/achievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="achievement"
                android:gravity="left|center_vertical"
                android:textColor="#161823"
                android:background="#f3f3f3"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/achievement"
                android:drawableRight="@mipmap/forward"
                />
            <Button
                android:id="@+id/locked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="locked"
                android:gravity="left|center_vertical"
                android:textColor="#161823"
                android:background="#f3f3f3"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/locked"
                android:drawableRight="@mipmap/forward"
                />
            <Button
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="about"
                android:gravity="left|center_vertical"
                android:textColor="#161823"
                android:background="#f3f3f3"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/about"
                android:drawableRight="@mipmap/forward"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>